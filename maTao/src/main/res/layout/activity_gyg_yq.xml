<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gyg_yq_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/xz_ico_back" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="144dp"
                android:layout_height="18dp"
                android:src="@drawable/xz_text_xzycq" />

            <TextView
                android:id="@+id/gyg_yq_date"
                android:layout_width="182dp"
                android:layout_height="78dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/xz_bg_date"
                android:gravity="center"
                android:text="请选择预产期"
                android:textColor="#ff8bc6"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/gyg_yq_yes"
                android:layout_width="82dp"
                android:layout_height="44dp"
                android:layout_marginTop="88dp"
                android:background="@drawable/btn_queding" />
        </LinearLayout>

</RelativeLayout>