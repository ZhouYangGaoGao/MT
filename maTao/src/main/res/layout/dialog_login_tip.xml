<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_login_tip"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="11dp"
        android:layout_weight="2"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/matao_tu"
            android:layout_width="131dp"
            android:layout_height="74dp"
            android:src="@drawable/pic_dltc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:text="登录后才可以继续哦!"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/matao_tu"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/matao_tu"
            android:text="亲爱滴"
            android:textColor="#666666"
            android:textSize="19sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d8d8d8" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/dialog_tip_N"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="下次再说"
            android:textColor="#1ac1ff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_l"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d8d8d8" >
        </TextView>

        <TextView
            android:id="@+id/dialog_tip_Y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="立即登录"
            android:textColor="#1ac1ff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>