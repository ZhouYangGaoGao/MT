<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res/com.matao.matao"
    android:id="@+id/hf_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/hf_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.matao.view.RoundAngleImageView
            android:id="@+id/hf_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic_14"
            ap:roundHeight="20dp"
            ap:roundWidth="20dp" />

        <TextView
            android:id="@+id/hf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/hf_icon"
            android:lineSpacingExtra="5dp"
            android:textColor="#888888"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/reply_item_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/hf_name"
            android:layout_below="@+id/hf_name"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/favorable_item_time"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ico_time" />

                <TextView
                    android:id="@+id/hf_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#999999"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hf_item_reply_click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/reply_item_reply_ico"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/pl_ico_review" />

                <TextView
                    android:id="@+id/reply_item_reply_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="回复"
                    android:textColor="#999999"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/reply_item_bottom" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#eeeeee" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="9dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/hf_triangle" />

        <TextView
            android:id="@+id/hf_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:gravity="center_vertical"
            android:layout_marginTop="-3dp"
            android:paddingBottom="11dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="11dp"
            android:singleLine="true"
            android:text="真好吃"
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />
        </LinearLayout>
</LinearLayout>