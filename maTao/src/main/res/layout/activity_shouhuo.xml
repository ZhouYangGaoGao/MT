<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ap="http://schemas.android.com/apk/res/com.matao.matao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEEED"
    android:orientation="vertical" >

    <com.matao.view.TopBar
        android:id="@+id/sh_topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/nav_bg"
        ap:leftImg="@drawable/nav_ico_arrow"
        ap:rightH="49dp"
        ap:rightW="49dp"
        ap:titleText="商品收货地址" >
    </com.matao.view.TopBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="#ECEEED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="收件人"
                    android:textColor="#444444"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sh_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="0.48"
                    android:background="@null"
                    android:hint="你的名字"
                    android:inputType="text"
                    android:textColor="#888888"
                    android:textColorHint="#cccccc"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="343dp"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_all_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="联系电话"
                    android:textColor="#444444"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sh_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:hint="你的手机号"
                    android:inputType="phone"
                    android:textColor="#888888"
                    android:textColorHint="#cccccc"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="343dp"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_all_line" />

            <RelativeLayout
                android:id="@+id/sh_searcharea"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="邮寄地址"
                    android:textColor="#444444"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sh_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/text"
                    android:background="@null"
                    android:editable="false"
                    android:ellipsize="end"
                    android:hint="选择省市区"
                    android:singleLine="true"
                    android:textColor="#888888"
                    android:textColorHint="#cccccc"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow4" />
            </RelativeLayout>

            <TextView
                android:layout_width="343dp"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_all_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/sh_detilplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="103dp"
                    android:background="@null"
                    android:hint="详细地址（到门牌号）"
                    android:inputType="text"
                    android:textColor="#888888"
                    android:textColorHint="#cccccc"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="343dp"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_all_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="QQ"
                    android:textColor="#444444"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sh_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="61dp"
                    android:layout_weight="0.49"
                    android:background="@null"
                    android:hint="你的联系QQ"
                    android:inputType="number"
                    android:textColor="#888888"
                    android:textColorHint="#cccccc"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="343dp"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_all_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="Email"
                    android:textColor="#444444"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/sh_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@null"
                    android:hint="你的Email地址"
                    android:inputType="textEmailAddress"
                    android:textColor="#888888"
                    android:textColorHint="#cccccc"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="343dp"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_all_line" />

            <TextView
                android:id="@+id/sh_yes"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/spshdz_but_confirm"
                android:gravity="center"
                android:text="确认"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>