<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res/com.matao.matao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/xttz_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <com.matao.view.RoundAngleImageView
            android:id="@+id/xttz_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic_14"
            ap:roundHeight="20dp"
            ap:roundWidth="20dp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/xttz_arrow"
            android:layout_toRightOf="@+id/xttz_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/xttz_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动专区"
                android:textColor="#777777"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/xttz_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="3dp"
                android:text="夏日9块9专场最新上线，快来淘专属你的优惠！"
                android:textColor="#444444"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/xttz_arrow"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:src="@drawable/xttz_ico_arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />

</LinearLayout>