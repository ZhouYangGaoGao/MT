<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res/com.matao.matao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.matao.view.TopBar
        android:id="@+id/bigimag_topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#000000"
        ap:leftImg="@drawable/nav_ico_arrow"
        ap:rightH="54dp"
        ap:rightImg="@drawable/nav_ico_download"
        ap:rightW="50dp"
        ap:titleText="1/1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/bigimag_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>