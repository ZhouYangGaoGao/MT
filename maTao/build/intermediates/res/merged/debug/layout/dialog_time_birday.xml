<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.matao.activity.StateActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#F5F5F5" >

        <TextView
            android:id="@+id/dialog_date_N"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/dialog_date_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择宝宝生日"
            android:textColor="#ff74bf"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/dialog_date_Y"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_confirm"
            android:gravity="center"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="21sp" />
    </RelativeLayout>

    <com.matao.view.MyDatePicker
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/datepicker_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="horizontal" >
    </com.matao.view.MyDatePicker>

</LinearLayout>