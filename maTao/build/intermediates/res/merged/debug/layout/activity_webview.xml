<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res/com.matao.matao"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        layout="@layout/animolayout" />

    <LinearLayout
        android:id="@+id/webview_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="44.5dp"
        android:orientation="horizontal"
        android:layout_marginTop="49dp" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/webview_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/webview_b1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/tab_ico_1_gray" />

        <ImageView
            android:id="@+id/webview_b2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/tab_ico_2" />

        <ImageView
            android:id="@+id/webview_b3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/tab_ico_3" />

        <ImageView
            android:id="@+id/webview_b4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/tab_ico_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/webview_tab"
        android:background="@color/color_all_line" >
    </LinearLayout>

    <com.matao.view.TopBar
        android:id="@+id/webview_topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/nav_bg"
        ap:leftImg="@drawable/nav_ico_arrow"
        ap:titleText="宝贝详情" />

</RelativeLayout>