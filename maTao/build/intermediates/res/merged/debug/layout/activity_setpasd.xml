<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res/com.matao.matao"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_720x1280" >

    <com.matao.view.TopBar
        android:id="@+id/setpasd_topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/nav_bg"
        ap:rightH="49dp"
        ap:rightImg="@drawable/nav_ico_close"
        ap:rightW="49dp"
        ap:titleText="设置登录密码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setpasd_topbar"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_margin="12dp"
                android:background="@drawable/input_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/input_ico_login" />

                <EditText
                    android:id="@+id/setpasd_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="设置登录密码"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_margin="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/input_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/input_ico_password" />

                <EditText
                    android:id="@+id/setpasd_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword" />
            </LinearLayout>

            <TextView
                android:id="@+id/setpasd_login"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_margin="12dp"
                android:background="@drawable/btn_4"
                android:gravity="center"
                android:text="验证"
                android:textColor="#ffffff"
                android:textSize="20sp" />
            </LinearLayout>
            </RelativeLayout>
