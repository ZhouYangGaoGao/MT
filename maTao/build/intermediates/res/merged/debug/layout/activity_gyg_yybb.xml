<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gyg_yybb_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/xz_ico_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="124dp"
                android:layout_height="18dp"
                android:src="@drawable/xz_text_xzsr" />

            <TextView
                android:id="@+id/gyg_yybb_date"
                android:layout_width="182dp"
                android:layout_height="78dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/xz_bg_date"
                android:gravity="center"
                android:text="请选择出生日期"
                android:textColor="#ff8bc6"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="18dp"
                android:layout_marginTop="75dp"
                android:src="@drawable/xz_text_xzxb" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/gyg_yybb_male"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/btn_sex_male"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/gyg_yybb_flmale"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/btn_sex_flmale"
                    android:button="@null" />
            </RadioGroup>

            <ImageView
                android:id="@+id/gyg_yybb_yes"
                android:layout_width="97dp"
                android:layout_height="44dp"
                android:layout_marginTop="68dp"
                android:background="@drawable/btn_queding" />
        </LinearLayout>

</RelativeLayout>