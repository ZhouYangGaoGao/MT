<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:a="http://schemas.android.com/apk/res/com.matao.matao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEFEE" >

    <RelativeLayout
        android:id="@+id/home_pagelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_pagerDot"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignBottom="@id/home_pagelayout"
        android:layout_alignRight="@id/home_pagelayout"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"
        android:gravity="right"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/home_lin"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/home_pagelayout"
        android:background="@color/color_all_line" />

    <LinearLayout
        android:id="@+id/home_linearLayout_tip"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@id/home_lin"
        android:layout_marginBottom="12dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp" >

        <com.matao.view.RoundAngleImageView
            android:id="@+id/home_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            a:roundHeight="17.5dp"
            a:roundWidth="17.5dp"
            android:src="@drawable/pic_14" />

        <LinearLayout
            android:id="@+id/tip1_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#444444"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/home_tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_icom2"
            android:layout_width="46dp"
            android:layout_height="34dp"
            android:src="@drawable/sy_ico_1" />

        <LinearLayout
            android:id="@+id/tip2_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_tip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#19a9e5"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/home_tip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#19a9e5"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_tip2_ico_arrow"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/sy_ico_arrow" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_lin0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/home_lin"
        android:layout_marginTop="51dp"
        android:background="@color/color_all_line" />

    <com.matao.view.Gif
        android:id="@+id/hometop_imgs_layoutbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_linearLayout_tip" />

    <LinearLayout
        android:id="@+id/hometop_imgs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_linearLayout_tip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_middle_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.73"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/home_middle_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.27"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_middle_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.365"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.365"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/home_middle_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/home_middle_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <ImageView
                android:id="@+id/home_middle_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.27"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hometop_imgs_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hometop_imgs_layout"
        android:layout_marginTop="12dp"
        android:background="@color/color_all_line"
        android:orientation="horizontal"
        android:paddingBottom="0.5dp"
        android:paddingTop="0.5dp" >

        <ImageView
            android:id="@+id/home_middle_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/home_middle_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hometop_imgs_layout2"
        android:layout_marginTop="12dp"
        android:gravity="bottom" >

        <ImageView
            android:layout_width="4dp"
            android:layout_height="12dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ico_2" />

        <TextView
            android:id="@+id/home_hot_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/hot_recommend"
            android:textColor="#666666"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/home_recommend"
        android:background="#ECEEED" />

</RelativeLayout>