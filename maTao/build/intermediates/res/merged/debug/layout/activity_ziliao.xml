<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ap="http://schemas.android.com/apk/res/com.matao.matao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <com.matao.view.TopBar
        android:id="@+id/wdxw_topbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/nav_bg"
        ap:leftImg="@drawable/nav_ico_arrow"
        ap:rightH="49dp"
        ap:rightW="49dp"
        ap:titleText="我的资料" >
    </com.matao.view.TopBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/zl_layouy_icon"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="13dp"
                android:background="@color/set" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d8d8d8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="头像"
                    android:textColor="#666666"
                    android:textSize="17sp" />

                <com.matao.view.RoundAngleImageView
                    android:id="@+id/zl_icon"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/house_into"
                    android:src="@drawable/pic_14"
                    ap:roundHeight="20dp"
                    ap:roundWidth="20dp" />

                <ImageView
                    android:id="@+id/house_into"
                    android:layout_width="43dp"
                    android:layout_height="67dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/zl_layout_name"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="center_vertical"
                android:background="@color/set" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="昵称"
                    android:textColor="#666666"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/zl_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/house_into2"
                    android:textColor="#ff74bf"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/house_into2"
                    android:layout_width="43dp"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_arrow4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/zl_layout_sex"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="center_vertical"
                android:background="@color/set" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="性别"
                    android:textColor="#666666"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/zl_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/house_into3"
                    android:textColor="#ff74bf"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/house_into3"
                    android:layout_width="43dp"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_arrow4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/zl_layout_place"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="center_vertical"
                android:background="@color/set" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="地区"
                    android:textColor="#666666"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/zl_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/house_into4"
                    android:textColor="#ff74bf"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/house_into4"
                    android:layout_width="43dp"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_arrow4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/zl_layout_band"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_gravity="center_vertical"
                android:background="@color/set" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="绑定"
                    android:textColor="#666666"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/zl_band"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ico_phone" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/zl_layout_state"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="center_vertical"
                android:background="@color/set" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="状态"
                    android:textColor="#666666"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/zl_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/house_into5"
                    android:textColor="#ff74bf"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/house_into5"
                    android:layout_width="43dp"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_arrow4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>